<script>
  document.addEventListener('DOMContentLoaded', function () {
    // selects each column that may contain cards
    const columns = document.querySelectorAll('.sf_colsIn');

    // iterates over each column
    columns.forEach(column => {
      // gets all card elements within the column
      const cards = column.querySelectorAll('.card');

      // checks the number of cards in the column
      if (cards.length > 1) {
        // if more than one card, adjust classes for each card
        cards.forEach(card => {
          card.classList.remove('h-100');
          card.classList.add('d-flex', 'flex-grow-1');
          card.style.flexBasis = '0';  // ensures that cards can grow and shrink as needed
        });
      } else if (cards.length === 1) {
        // if only one card, this will keep 'h-100' and does not have 'd-flex' or 'flex-grow-1'
        cards[0].classList.add('h-100');
        cards[0].classList.remove('d-flex', 'flex-grow-1');
      }
    });
  });
</script>
    </div>
