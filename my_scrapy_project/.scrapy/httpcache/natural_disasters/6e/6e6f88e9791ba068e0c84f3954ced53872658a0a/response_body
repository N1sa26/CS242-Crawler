                        <section class="region region-footer-second">
    

    
<nav role="navigation" aria-labelledby="block-secretarygeneral-menu" id="block-secretarygeneral" class="border-bottom border-un-absolute-black-25 mb-m mb-sm-0 pb-sm-m block block-menu navigation menu--secretary-general">
      
    <h2 id="block-secretarygeneral-menu" class="block-title">

              Secretary-General
      
              <button class="btn btn-collapse float-end d-lg-none border-0 rounded-0 p-0 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#block-secretarygeneral-content" aria-expanded="false" aria-controls="block-secretarygeneral-content">
          <i class="icon icon-show fa-regular fa-square-plus fs-md"></i>
                    <i class="icon icon-collapse fa-regular fa-square-minus fs-md"></i>
                    <span class="visually-hidden"> Button collapse </span>
        </button>
          </h2>
  

        <div id="block-secretarygeneral-content" class="collapse d-lg-block block-content">
      
              <ul class="clearfix nav navbar-nav">
